= form_with(model: hashtag) do |form|
  - if hashtag.errors.any?
    %div{:style => "color: red"}
      %h2
        = pluralize(hashtag.errors.count, "error")
        prohibited this hashtag from being saved:
      %ul
        - hashtag.errors.each do |error|
          %li= error.full_message
  %div
    = form.label :identifier, style: "display: block"
    = form.text_field :identifier
  %div
    = form.submit
